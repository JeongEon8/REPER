<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="380dp"
    android:layout_height="600dp"
    android:background="@drawable/dialog_delete"
    android:padding="32dp">

    <TextView
        android:id="@+id/textView2"
        style="@style/titleFontStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="재료 필터링"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/filter_spinner"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:background="@drawable/filter_spinner_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_semibold"
            android:text="카페인"
            android:textColor="@color/darkgreen"
            android:textSize="22sp" />

        <RadioButton
            android:id="@+id/radio_coffee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="커피"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/radio_matcha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="말차"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/radio_chocolate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="초콜릿"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/radio_earl_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="얼그레이"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_semibold"
            android:text="유제품"
            android:textColor="@color/darkgreen"
            android:textSize="22sp" />

        <RadioButton
            android:id="@+id/radio_milk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="우유"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/radio_cream"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="크림"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/radio_condensed_milk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="연유"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/linearLayout2"
        app:layout_constraintTop_toTopOf="@+id/linearLayout2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_semibold"
            android:text="과일"
            android:textColor="@color/darkgreen"
            android:textSize="22sp" />

        <RadioButton
            android:id="@+id/radio_banana"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="바나나"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/radio_strawberry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="딸기"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/radio_blueberry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="블루베리"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/radio_lemon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="레몬"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/radio_grapefruit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="자몽"
            android:textSize="20dp" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dialog_delete_cancel_btn"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:background="@drawable/line_btn"
        android:fontFamily="@font/pretendard_semibold"
        android:text="취소"
        android:textColor="@color/darkgray"
        android:layout_marginRight="24dp"
        app:layout_constraintEnd_toStartOf="@+id/dialog_delete_delete_btn"
        app:layout_constraintTop_toTopOf="@+id/dialog_delete_delete_btn" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dialog_delete_delete_btn"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:background="@drawable/green_btn"
        android:fontFamily="@font/pretendard_bold"
        android:text="검색하기"
        android:textColor="@color/bgwhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
