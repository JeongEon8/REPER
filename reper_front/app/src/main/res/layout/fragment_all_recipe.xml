<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="40dp"
    android:background="@drawable/background"
    android:id="@+id/fragment_all_recipe"
    tools:context=".ui.recipe.AllRecipeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView"
            style="@style/styleTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="원하는 레시피를 찾아보세요!"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/search_bar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView">

            <ImageButton
                android:id="@+id/allrecipe_fm_btn_search"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="20dp"
                android:backgroundTint="@android:color/transparent"
                android:src="@drawable/search_icon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/allrecipe_fm_et_search"
                android:layout_width="255dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/transparent"
                android:fontFamily="@font/pretendard_regular"
                android:hint="레시피를 검색해보세요."
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/allrecipe_fm_btn_search"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/allrecipe_fm_btn_filter"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="20dp"
                android:backgroundTint="@android:color/transparent"
                android:src="@drawable/filter_icon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <Spinner
            android:id="@+id/allrecipe_fm_sp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:spinnerMode="dialog"
            android:background="@drawable/spinner_allrecipe_category"
            android:theme="@style/SpinnerTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/allrecipe_fm_btngroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/darkgreen"
            app:checkedButton="@+id/fullrecipe_fm_btn_ice"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/allrecipe_fm_sp"
            app:singleSelection="true">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/allrecipe_fm_btn_step"
                style="@style/AllRecipeCheckedToggleButtonStyle"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_bold"
                android:paddingHorizontal="16dp"
                android:text="단계별 레시피"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:visibility="visible" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/allrecipe_fm_btn_full"
                style="@style/AllRecipeBaseToggleButtonStyle"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_bold"
                android:text="전체 레시피"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:visibility="visible" />

        </com.google.android.material.button.MaterialButtonToggleGroup>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/allrecipe_fm_rv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/allrecipe_fm_btngroup" />

        <FrameLayout
            android:id="@+id/allrecipe_fm_fl_btn_search_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageButton
                android:id="@+id/allrecipe_fm_btn_search_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/transparent"
                android:src="@drawable/btn"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_semibold"
                android:layout_gravity="center"
                android:text="검색하기"
                android:textColor="@color/white"
                android:textSize="16sp"/>

        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
